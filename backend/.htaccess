# Mengaktifkan modul rewrite URL
RewriteEngine On

# Menetapkan basis URL untuk rewrite
RewriteBase /proyek-undangan/backend/

# Aturan Utama:
# Jika request BUKAN file yang ada (-f)
RewriteCond %{REQUEST_FILENAME} !-f
# DAN jika request BUKAN direktori yang ada (-d)
RewriteCond %{REQUEST_FILENAME} !-d
# Maka, arahkan semua request yang masuk ke folder /api/ ke file router.php
RewriteRule ^api/(.*)$ api/router.php?request=$1 [L,QSA]
